@model IEnumerable<MvcFlowers.Models.MonoFlowers>

@{
    ViewData["Title"] = "Mono Flowers";
}

<h1>MonoFlowers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecievementDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colour)
            </th>
            <th>
                Freshness
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityInBatch)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecievementDate)
                </td>
                <td>
                    @item.Price.ToString("C")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colour)
                </td>
                <td>
                    @if (item.IsFresh())
                    {
                        <span class="text-success">Fresh</span>
                    }
                    else
                    {
                        <span class="text-danger">Not Fresh</span>
                    }
                </td>
                <td>
                    @item.QuantityInBatch
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MonoFlowerId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MonoFlowerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MonoFlowerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
