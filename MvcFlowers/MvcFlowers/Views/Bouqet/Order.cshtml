@model MvcFlowers.Models.Order

@{
    ViewData["Title"] = "Order Bouquet";
}

<h1>Order Bouquet</h1>
@Html.AntiForgeryToken()

<form asp-action="Order" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Вывод ошибок модели -->
    <div asp-validation-summary="All" class="text-danger"></div> <!-- Вывод ошибок отправки формы -->

   
    <input type="hidden" asp-for="BouqetId" value="@Model.BouqetId" /> <!-- Скрытое поле для передачи значения BouqetId -->

    <div class="form-group">
        <label asp-for="BouqetId" class="control-label"></label>
        <input asp-for="BouqetId" class="form-control"  /> <!-- Поле для считывания BouqetId -->
        <span asp-validation-for="BouqetId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <input type="submit" value="Submit Order" class="btn btn-primary" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } <!-- Подключение скриптов валидации -->
}
